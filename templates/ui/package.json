{
  "private": true,
  "name": "ui-template",
  "description": "React UI 组件开发模板",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "start-storybook -p 9001 -c .storybook",
    "lint": "eslint . --ext=.js,.jsx --fix",
    "precommit": "lint-staged",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "prepush": "npm run lint"
  },
  "dependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@storybook/react": "^3.4.10",
    "@uedlinker/commitlint-config": "^1.0.1",
    "@uedlinker/eslint-config-base": "^1.0.0",
    "@uedlinker/eslint-config-react": "^1.1.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "eslint": "^5.3.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-react": "^7.11.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2"
  },
  "eslintConfig": {
    "extends": "@uedlinker/eslint-config-react"
  },
  "eslintIgnore": [
    "node_modules/",
    "!.storybook/"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@uedlinker/commitlint-config"
    ]
  }
}
